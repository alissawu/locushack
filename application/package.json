{
  "name": "application",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"WS,NEXT\" --prefix-colors \"cyan,magenta\" \"npm run server\" \"npm run next\"",
    "server": "tsx watch server/index.ts",
    "next": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "concurrently --names \"WS,NEXT\" --prefix-colors \"cyan,magenta\" \"node server/index.js\" \"next start -H 0.0.0.0\"",
    "lint": "eslint"
  },
  "dependencies": {
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
